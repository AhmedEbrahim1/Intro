@model Employee
<h1> Add  New employee</h1>

@{
    var depts = ViewBag.depts; //IEnumrable ==> list => departments
    SelectList deptsList = new SelectList(depts, "Id", "Name");
}

<form method="post" asp-action="AddNewEmployee" asp-controller="Emolyee">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="Nam"></label>
        <input asp-for="Nam" class="form-control" />
        <span asp-validation-for="Nam" class="text-danger"></span>
    </div>


    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Dept_Id"></label>
        @*<input asp-for="Dept_Id" class="form-control" />*@

        <select asp-for="Dept_Id" asp-items="deptsList" class="form-control">
        </select>

    </div>

    <input type="submit" value="Add" class="btn btn-success" />


</form>


@section Scripts{

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}